        .about-section {
            padding: 50px;
            text-align: center;
            background-color: #474e5d;
            color: white;
        }

        .container {
            padding: 0 16px;
        }

        .container::after,
        .row::after {
            content: "";
            clear: both;
            display: table;
        }

        .title {
            color: grey;
        }

        .button {
            border: none;
            outline: 0;
            display: inline-block;
            padding: 8px;
            color: white;
            background-color: #000;
            text-align: center;
            cursor: pointer;
            width: 100%;
        }

        .button:hover {
            background-color: #555;
        }

        @media screen and (max-width: 650px) {
            .column {
                width: 100%;
                display: block;
            }
        }

        div.back {
            position: -webkit-sticky;
            /* Safari */
            position: sticky;
            top: 1rem;
            left: 1rem;
            width: 1.5rem;
            background-color: transparent;
            border-radius: 10%;
            float: left;
        }

        #back-btn {
            text-decoration: none;
            font-size: 2.5rem;
            color: rgb(0, 0, 0);
        }
    </style>
</head>

